<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}

<h3>Animal Name     Type     Sex     DateOfAdmittance     Breed</h3>

@foreach (var animal in Model)
{
  <h4>@animal.GetName()     @animal.GetType()     @animal.GetSex()     @animal.GetDateOfAdmittance()     @animal.GetBreed()</h4>
}
